{
    "manifest_version": 3,
    "name": "Slitherio bot extension",
    "version": "0.1.0",

    "description": "Slitherio bot",

    "content_scripts": [
        {
            "matches": ["http://slither.io/"],
            "js": ["inject.js"]
        }
    ],

    "web_accessible_resources": [
        {
            "resources": ["dist/bot.js"],
            "matches": ["<all_urls>"]
        }
    ],

    "action": {
        "default_popup": "hot-reload/popup.html"
    },

    "permissions": ["storage"],

    "background": {
        "service_worker": "hot-reload/background.js"
    },

    "host_permissions": ["http://localhost:9001/*"]
}
